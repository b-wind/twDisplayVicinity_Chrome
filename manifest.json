{
    "manifest_version" : 2
,   "name" : "__MSG_ext_title__"
,   "short_name" : "__MSG_ext_short_name__"
,   "version" : "0.2.6.1300"
,   "description" : "__MSG_ext_description__"
,   "author" : "furyu"
,   "default_locale" : "en"
,   "icons" : {
        "16" : "images/icon_16.png"
    ,   "48" : "images/icon_48.png"
    ,   "64" : "images/icon_64.png"
    ,   "96" : "images/icon_96.png"
    ,   "128" : "images/icon_128.png"
    }
,   "content_scripts" : [
        {
            "matches" : [ "http://twitter.com/*", "https://twitter.com/*" ]
        ,   "js" : [ "scripts/jquery.min.js", "scripts/decimal.min.js", "scripts/load_options.js" ]
        ,   "run_at" : "document_start"
        }
    ,   {
            "matches" : [ "http://twitter.com/*", "https://twitter.com/*" ]
        ,   "js" : [ "scripts/twDisplayVicinity/twDisplayVicinity.user.js" ]
        ,   "run_at" : "document_end"
        }
    ]
,   "background" : {
        "scripts" : [ "scripts/background.js" ]
    ,   "persistent": true
    }
,   "options_ui" : {
        "page" : "options.html"
    ,   "open_in_tab" : true
    }
,   "browser_action" : {
        "default_icon" : "images/icon_16.png"
    ,   "default_title" : "__MSG_ext_title__"
    ,   "default_popup" : "options.html"
    }
,   "permissions": [ "webRequest", "webRequestBlocking", "*://*.twitter.com/*" ]
}
